<% include ../partials/header %>
<% include ../partials/navbar %>

<link href="./stylesheets/main.css" rel="stylesheet">

<div class="container add-book-container">
    <div class="row">
      
            <form action="/books/<%= book._id %>?_method=PUT" method="POST">
                <div class="form-group row">
                    <label for="name" class="col-xs-3 col-form-label">Book Name </label>
                    <div class="col-xs-9">
                        <input class="form-control" type="text" name="book[name]" value="<%= book.name %>" id="name">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="book-image-url-input" class="col-xs-3 col-form-label">Find the Book Cover Image</label>
                    <div class="col-xs-9">
                        <script>
  (function() {
    var cx = '015603025126327349164:edvdsgopvxi';
    var gcse = document.createElement('script');
    gcse.type = 'text/javascript';
    gcse.async = true;
    gcse.src = 'https://cse.google.com/cse.js?cx=' + cx;
    var s = document.getElementsByTagName('script')[0];
    s.parentNode.insertBefore(gcse, s);
  })();
</script>
<gcse:search></gcse:search>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="book-image" class="col-xs-3 col-form-label">Paste that URL</label>
                    <div class="col-xs-9">
                        <input class="form-control" type="text" name="book[image]" value="<%= book.image %>" id="book-image-url-input" />
                    </div>
                </div>
                        
                 <div class="form-group row">
                    <label for="book-desc" class="col-xs-3 col-form-label">Book Description</label>
                    <div class="col-xs-9">
                        <textarea class="form-control" name="book[desc]" id="book-desc"><%= book.desc %></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-sm">Submit</button>
                </div>
            </form>
             
        </div>
    </div>
</div>



<% include ../partials/footer %>
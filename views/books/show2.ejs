            <!--    <li class="list-group-item">Info2</li>-->
            <!--    <li class="list-group-item">Info3</li>-->
            <!--</div>-->
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= book.image %>" />
                <div class="caption-full">
                    <h4 class="pull-right">$9.00</h4>
                    <h4><%= book.name %></h4>
                    <!--<p>book description goes here </p>-->
                    <p> <%= book.desc %></p>
                    <!--<p> <ejstag book.author.username %></p>-->
              <%    if(currentUser && book.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-xs btn-warning" href="/books/<%= book._id %>/edit">Edit </a>
                        <form style="display: inline" action="/books/<%= book._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
              <%    } %>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/books/<%= book._id %>/comments/new">add your review</a>
                </div>
                <hr>
                <% book.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p> <%= comment.text %></p>
                        </div>
                    </div>
                    
                <% }); %>
            </div>
        </div>
    </div>
</div>

